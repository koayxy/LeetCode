class Solution:
    def customSortString(self, order, s):
        # count occurence of character
        char_count = Counter(s)

        # list for storing sorted characters
        sorted_characters = []

        # append character repeated to list
        for char in order:
            sorted_characters.append(char * char_count[char])
            char_count[char] = 0

        # append remainder to list
        for char, count in char_count.items():
            sorted_characters.append(char * count)

        # join all characters into string
        return ''.join(sorted_characters)
